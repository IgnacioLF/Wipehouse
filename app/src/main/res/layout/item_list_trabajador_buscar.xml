<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/relativemain">

    <RelativeLayout
        android:id="@+id/relative_conteenedor_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        >
        <ImageView
            android:id="@+id/imageViewcirculo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/blue_circle" />
        <ImageView
            android:id="@+id/imageView_trabajador"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_centerInParent="true"
            app:srcCompat="@drawable/ejemplo" />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/linearpuntuacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_toRightOf="@+id/relative_conteenedor_image"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/imageViewestrella1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/estrellaicon_selected" />
        <ImageView
            android:id="@+id/imageViewestrella2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/estrellaicon_selected" />
        <ImageView
            android:id="@+id/imageViewestrella3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/estrellaicon_selected" />
        <ImageView
            android:id="@+id/imageViewestrella4"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="5dp"
            app:srcCompat="@drawable/estrellaicon_selected" />
        <ImageView
            android:id="@+id/imageViewestrella5"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:srcCompat="@drawable/estrellaicon_selected" />
    </LinearLayout>
    <TextView
        android:id="@+id/textViewNombreyapellido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#2c3340"
        android:textSize="23sp"
        android:layout_alignTop="@+id/linearpuntuacion"
        android:layout_toRightOf="@+id/relative_conteenedor_image"
        android:textStyle="bold"
        android:layout_marginTop="7dp"
        android:text="Jose Andres" />
    <TextView
        android:id="@+id/textViewCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_toRightOf="@+id/relative_conteenedor_image"
        android:textColor="@color/lightblue"
        android:textSize="15sp"
        android:textStyle="bold"
        android:text="Categoria" />

    <TextView
        android:id="@+id/textViewprecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/lightblue"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:text="00â‚¬" />
</RelativeLayout>